package day5;

import java.util.*;
class pat
{
	public static void main(String[]args)
	{
		int n,i,j;
		Scanner s=new Scanner(System.in);
		System.out.println("enter the rows");
		n=s.nextInt();
		for(i=1;i<=n;i++)
		{
			for(j=1;j<=i;j++)
			{
				System.out.print(i);
			}
			System.out.println();
		}
		for(i=n-1;i>=1;i--)
		{
			for(j=1;j<=i;j++)
			{
				System.out.print(i);
			}
			System.out.println();
		}
		
	}
}

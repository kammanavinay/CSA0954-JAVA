import java.util.*;
 public class pattern
{
	public static void main(String[]args)
	{
		Scanner k=new Scanner(System.in);
		System.out.println("enter the pattern");
		int n=k.nextInt();
		for(int i=1;i<=n;i++)
		{
		 int a=1;
		 for(int s=1;s<=n-i;s++)
		 {
		 System.out.print(" ");
		 }
		 for(int j=1;j<=i;j++)
		 {
		 System.out.print(a+" ");
		 a=a*(i-j)/j;
		 }
		 System.out.println();
		}
	}
}
